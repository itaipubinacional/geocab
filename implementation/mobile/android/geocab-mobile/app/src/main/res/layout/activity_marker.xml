<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.gov.itaipu.geocab.controller.activity.MarkerActivity">

    <ScrollView android:id="@+id/ScrollView01"
        android:fillViewport="true"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mainPainel"
            android:focusable="true" android:focusableInTouchMode="true"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="14px"
            android:paddingLeft="15px"
            android:paddingRight="20px">

            <!-- *********** FORMITEM CAMADA *************** -->

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5px"
                android:text="Camada"
                android:textAppearance="?android:attr/textAppearanceMedium">
            </TextView>

            <Spinner
                android:id="@+id/spinner_layers"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <!-- *********** FORMITEMS *************** -->

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/linearPainel"
                android:focusable="true" android:focusableInTouchMode="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <!-- *********** IMAGE PREVIEW *************** -->

            <!-- *********** BUTTONS *************** -->
            <LinearLayout
                android:id="@+id/footer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:paddingTop="10dp"
                android:gravity="bottom" >

                <Button
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Imagem"
                    android:id="@+id/btn_select_photo"
                    android:padding="4dp"
                    android:textColor="#FFFFFF"
                    android:drawableLeft="@drawable/ic_camera"
                    android:background="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_alignParentTop="true"
                    android:onClick="selectMarkerImage" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Salvar"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/darker_gray"
                    android:padding="4dp"
                    android:id="@+id/button2"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/btn_select_photo"
                    android:onClick="saveMarker" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
